                android:layout_alignBottom="@+id/editSelectionPosition12"
                android:layout_alignTop="@+id/editSelectionPosition12"
                />

            <!-- Position 13 Title -->
            <TextView
                android:id="@+id/editSelectionPosition13"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/midPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition12"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 13 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/editSelectionPosition13"
                android:layout_alignTop="@+id/editSelectionPosition13"
                />

            <!-- Position 14 Title -->
            <TextView
                android:id="@+id/editSelectionPosition14"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/flexPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition13"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 14 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/editSelectionPosition14"
                android:layout_alignTop="@+id/editSelectionPosition14"
                />

            <!-- Final Submit button to send the new Selections to the WebService -->
            <Button
                android:id="@+id/editSelectionSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/actionSubmit"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editSelectionPosition14"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                android:layout_marginBottom="@dimen/layout_vertical_margin"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
