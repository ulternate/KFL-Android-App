                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition7"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 8 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/editSelectionPosition8"
                android:layout_alignTop="@+id/editSelectionPosition8"
                />

            <!-- Position 9 Title -->
            <TextView
                android:id="@+id/editSelectionPosition9"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/forwardPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition8"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 9 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
