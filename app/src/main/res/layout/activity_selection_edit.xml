<?xml version="1.0" encoding="utf-8"?>
<!--Activity resource for the SelectionEditActivity-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/layout_horizontal_margin"
    android:paddingRight="@dimen/layout_horizontal_margin"
    tools:context="com.danielcswain.kfl.SelectionEditActivity">

    <!--Activity header giving user their instructions for the activity.-->
    <TextView
        android:id="@+id/editSelectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/editSelectionsInstructions"
        />

    <!--ScrollView containing all the PlayerObject selection Spinners and the submit button as
        these elements will likely go off screen (vertically)-->
    <ScrollView
        android:id="@+id/editSelectionScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/editSelectionTitle"
        android:layout_marginTop="@dimen/layout_vertical_margin">

        <!--RelativeLayout taking the width of the scrollView and the height of the children elements-->
        <RelativeLayout
            android:id="@+id/editSelectionFieldContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Position 1 Title -->
            <TextView
                android:id="@+id/editSelectionPosition1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/ruckPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"/>

            <!-- Player 1 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/editSelectionPosition1"
                android:layout_alignTop="@+id/editSelectionPosition1"
                />

            <!-- Position 2 Title -->
            <TextView
                android:id="@+id/editSelectionPosition2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/tacklerPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition1"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 2 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/editSelectionPosition2"
                android:layout_alignTop="@+id/editSelectionPosition2"
                />

            <!-- Position 3 Title -->
            <TextView
                android:id="@+id/editSelectionPosition3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/tacklerPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition2"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 3 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/editSelectionPosition3"
                android:layout_alignTop="@+id/editSelectionPosition3"
                />

            <!-- Position 4 Title -->
            <TextView
                android:id="@+id/editSelectionPosition4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/markerPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition3"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 4 Selector -->
            <Spinner
                android:id="@+id/editSelectionPlayer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/editSelectionPosition4"
                android:layout_alignTop="@+id/editSelectionPosition4"
                />

            <!-- Position 5 Title -->
            <TextView
                android:id="@+id/editSelectionPosition5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/markerPosition"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_below="@id/editSelectionPosition4"
                android:layout_marginTop="@dimen/layout_vertical_margin"
                />

            <!-- Player 5 Selector -->
